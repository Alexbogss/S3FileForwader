<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">FileForwarder</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Главная
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="incoming">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Входящие
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="outcoming">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Исходящие
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="telegram">
                <span class="oi oi-external-link" aria-hidden="true"></span> Телеграм
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
